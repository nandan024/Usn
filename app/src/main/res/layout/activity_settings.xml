<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.param.usn.Activity.SettingsActivity"
    android:background="@drawable/ic_forgetpass_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stBack"
            android:background="@drawable/ic_back"
            android:contentDescription="back to homescreen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Profile Details"
            android:id="@+id/profiletext"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Employer"
            android:id="@+id/Nametext"
            android:layout_weight="0.4"
            android:layout_marginTop="100dp"
            android:textSize="22sp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/stName"
            android:layout_weight="0.5"
            android:layout_marginTop="100dp"
            android:inputType="text"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:maxLength="20" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:id="@+id/Phonenotext"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginTop="165dp"
            android:layout_weight="0.4" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/stPhone"
            android:layout_marginTop="165dp"
            android:maxLength="10"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Student ID"
            android:id="@+id/Studentidtext"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginTop="225dp"
            android:layout_weight="0.4" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/stStudentid"
            android:inputType="text"
            android:layout_marginTop="225dp"
            android:maxLines="1"
            android:lines="1"
            android:maxLength="10"
            android:singleLine="true"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Schedule"
            android:id="@+id/primaryschtext"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginTop="300dp" />

        <Spinner
            android:id="@+id/stPrimarysch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:entries="@array/Primary_Schedule"
            android:spinnerMode="dropdown"
            android:layout_marginTop="300dp">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:id="@+id/notificationstext"
            android:layout_weight="0.3"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginTop="375dp"
            android:textIsSelectable="false" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stnotification"
            android:layout_weight="0.5"
            android:layout_marginTop="375dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:id="@+id/stSettingbtn"
            android:background="#FF3366"
            android:layout_marginTop="475dp"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>
